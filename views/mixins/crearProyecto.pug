mixin crearProyecto(proyecto = {})
  form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
      .campo
        label(for="nombre") Nome do Projeto: 
        input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder='Nome do Projeto') 
      .campo.enviar
        input(type="submit", value=`${proyecto.nombre ? 'Salvar' : 'Adicionar'}` class="boton")